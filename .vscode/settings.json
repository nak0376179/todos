{
  // __pycache__をエクスプローラーで非表示
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true
  },
  // 保存時にblackで自動整形
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // backendディレクトリをPythonのパスに追加
  "python.analysis.extraPaths": ["backend"]
}
